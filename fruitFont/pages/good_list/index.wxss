page{
  background-color: rgb(240,240,240);
}
.head{
  width: auto;
  height: 100rpx;
  background-color: rgb(255,120,0);
  text-align: center;
}
.head span{
  font-size: 34rpx;
  font-weight: 500;
  color:white;
  position: relative;
  top:57rpx;
}
.backgound_information::after{
  content: "";
  width: auto;
  background-color: red;
  display: block;  
  height: 280rpx;
  background-image: linear-gradient(rgb(255,120,0),rgb(240,240,240));
}
.position_1{
  width: 100vw;
  display: flex;
  justify-content: center;
}
.position{
margin: 0px auto;
width:650rpx;
height:150rpx;
background-color: white;
/* display: flex;
flex-direction: row; */
