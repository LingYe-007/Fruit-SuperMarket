top:150rpx;
border-radius:15rpx;
}
.position image,span{
  color: rgb(254,127,14);
}
.position image {
  width: 40rpx;
  height: 40rpx;
}
.position span{
  padding: 3rpx;
  padding-right:2rpx ;
  line-height: 40rpx;
  color:grey;
  font-weight: 200;
  width: auto;
}
.pos{
  margin: 20rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  height: 40rpx;
}
.pos span{
  font-size: 31rpx;
  color:rgb(254,127,14);
}
.good_list{
  position: relative;
  top: 10rpx;
}
