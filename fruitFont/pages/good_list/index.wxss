  height: 880rpx;
  background: rgb(255,255,255);
  border-radius: 30rpx;
  margin-right: 30rpx;
}

.aside_left view{
  border-radius: 10rpx;
  font-size: 28rpx;
  color:grey;
  background: rgb(255,255,255);
  padding: 3rpx;
  width: 150rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
#good_total{
  position: relative;
  top: -70rpx;
  width:650rpx;
  margin: 0 auto;
}
#content{
  width:100vw;
  text-align: center;
}
